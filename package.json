{
  "name": "yml-change-webhook",
  "version": "1.0.0",
  "description": "GitHub Action to detect YML changes and trigger webhooks",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write '**/*.{js,json,yml,yaml}'",
    "prepare": "npm run build",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release": "npm run build && git add dist/ package.json package-lock.json && git commit -m \"Build and version bump\" && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wearemiew/yml-change-webhook.git"
  },
  "keywords": [
    "github",
    "actions",
    "yml",
    "yaml",
    "webhook",
    "automation"
  ],
  "author": "Miew",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wearemiew/yml-change-webhook/issues"
  },
  "homepage": "https://github.com/wearemiew/yml-change-webhook#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "axios": "^1.3.4",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7"
  }
}
